<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="right|center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.blue.project.chat">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송"
        android:id="@+id/sendbt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sendbt"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:id="@+id/chatTextview"
        android:layout_above="@+id/sendbt"
        android:layout_below="@+id/prebt"
        android:layout_alignEnd="@+id/menubt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:id="@+id/prebt"
        android:onClick="onButton2Clicked"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/prebt"
        android:layout_alignTop="@+id/prebt"
        android:layout_alignEnd="@+id/editText"
        android:layout_toEndOf="@+id/prebt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴"
        android:id="@+id/menubt"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:onClick="onButton1Clicked" />
    <FrameLayout
        android:layout_height="470dp"
        android:layout_width="250dp"
        android:id="@+id/frameLayout"
        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/sendbt">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#FFE08C"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_gravity="right"
            android:id="@+id/slidingPage01">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set"
                android:text="설정" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진 보내기"
                android:id="@+id/image"
                android:layout_marginTop="70dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/camera"
                android:text="사진 찍어  보내기" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/voice"
                android:text="음성 보내기" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news"
                android:text="뉴스방 만들기"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invitation"
                android:text="대화 상대 초대하기"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/out"
                android:text="채팅방 나가기"
                android:layout_marginTop="70dp"/>

        </LinearLayout>

</FrameLayout>
</RelativeLayout>